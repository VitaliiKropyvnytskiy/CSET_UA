<nav>
    <!-- Because TSA can support a mix of assessment features/options, everything 
         needs to be included in the workflow -->

    <node displaytext="Підготовка" id="phase-prepare">
        <node displaytext="Конфігурація оцінювання" id="info-tsa" path="assessment/{:id}/prepare/info-tsa" />
        <node displaytext="Інформація про оцінювання" id="info2-tsa" path="assessment/{:id}/prepare/info2-tsa" />
        <node displaytext="Рівень безпеки (SAL)" id="sal" path="assessment/{:id}/prepare/sal" />
    </node>



    <!-- Questions/Requirements/Statements -->
    <node displaytext="Оцінювання" id="phase-assessment">

        <!-- do not show for ACET or TSA -->
        <node displaytext="Питання зрілості" id="maturity-questions" path="assessment/{:id}/maturity-questions" 
            condition="OPTION:MATURITY MATURITY-NOT:CIS" />

        <!-- condition: if a standard is in play -->
        <node displaytext="Стандартні питання" id="questions" path="assessment/{:id}/questions" 
            condition="OPTION:STANDARD" />

        <!-- TODO:  include the CIS question tree.  This is a good argument for breaking it out into its own file -->
    </node>



    <!-- Results -->
    <node displaytext="Результати" id="phase-results">

        <!-- standards results -->
        <node displaytext="Результати стандартів" id="standards-results-node" condition="OPTION:STANDARD">
            <node displaytext="Панель аналізу" id="dashboard" path="assessment/{:id}/results/dashboard" />
            <node displaytext="Пріоритети контролю" id="ranked-questions" path="assessment/{:id}/results/ranked-questions" />
            <node displaytext="Підсумок стандартів" id="standards-summary" path="assessment/{:id}/results/standards-summary" />
            <node displaytext="Рейтингові категорії" id="standards-ranked" path="assessment/{:id}/results/standards-ranked" />
            <node displaytext="Результати за категоріями" id="standards-results" path="assessment/{:id}/results/standards-results" />
        </node>


        <!-- components results -->
        <node displaytext="Результати компонентів" id="components-results-node" condition="OPTION:DIAGRAM">
            <node displaytext="Підсумок компонентів" id="components-summary" path="assessment/{:id}/results/components-summary" />
            <node displaytext="Рейтингові компоненти за категорією" id="components-ranked" path="assessment/{:id}/results/components-ranked" />
            <node displaytext="Результати компонентів за категорією" id="components-results" path="assessment/{:id}/results/components-results" />
            <node displaytext="Відповіді за типом компонента" id="components-types" path="assessment/{:id}/results/components-types" />
            <node displaytext="Мережеві попередження" id="components-warnings" path="assessment/{:id}/results/components-warnings" />
        </node>


        <!-- Reports -->
        <node displaytext="Короткий опис оцінювання високого рівня &amp; Коментарі" id="overview" path="assessment/{:id}/results/overview" condition="SHOW-EXEC-SUMMARY" />
        <node displaytext="Звіти" id="reports" path="assessment/{:id}/results/reports"/>
        <node displaytext="Оцінювання зверешено" id="tsa-assessment-complete" path="assessment/{:id}/results/tsa-assessment-complete" condition="INSTALL-MODE:TSA" />

    </node>
</nav>