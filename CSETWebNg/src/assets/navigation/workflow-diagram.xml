<nav>
    <!-- Prepare Phase -->
    <node displaytext="Підготовка" id="phase-prepare">
        <node displaytext="Конфігурація оцінювання" id="info1" path="assessment/{:id}/prepare/info1" />
        <node displaytext="Інформація про оцінювання" id="info2" path="assessment/{:id}/prepare/info2" />
        <node displaytext="Рівень безпеки (SAL)" id="sal" path="assessment/{:id}/prepare/sal"
            condition="OPTION-ANY(STANDARD,DIAGRAM)" />

        <!-- Standards selection screen -->
        <node displaytext="Вибір стандартів кібербезпеки" id="standards" path="assessment/{:id}/prepare/standards" condition="OPTION:STANDARD" />

        <!-- ACET-specifi screens -->
        <node displaytext="Профілі внутрішнього ризику" id="irp" path="assessment/{:id}/prepare/irp" condition="MATURITY:ACET" />
        <node displaytext="Підсумок профілів внутрішнього ризику" id="irp-summary" path="assessment/{:id}/prepare/irp-summar" condition="MATURITY:ACET" />


        <!-- Diagram -->
        <node displaytext="Діаграма мережі" id="diagram" path="assessment/{:id}/prepare/diagram/info" condition="OPTION:DIAGRAM" />
    </node>



    <!-- Assessment Phase -->
    <node displaytext="Оцінювання" id="phase-assessment">
        <node displaytext="Запитання щодо компонентів діаграми" id="diagram-questions" path="assessment/{:id}/diagram-questions" condition="OPTION:DIAGRAM" />
    </node>



    <!-- Results - Components -->
    <node displaytext="Результати" id="phase-results">
        <node displaytext="Результати компонентів" id="components-results-node" condition="OPTION:DIAGRAM"/>
        <node displaytext="Підсумок компонентів" id="components-summary" path="assessment/{:id}/results/components-summary" condition="OPTION:DIAGRAM" />
        <node displaytext="Рейтингові компоненти за категорією" id="components-ranked" path="assessment/{:id}/results/components-ranked" condition="OPTION:DIAGRAM" />
        <node displaytext="Результати компонентів за категорією" id="components-results" path="assessment/{:id}/results/components-results" condition="OPTION:DIAGRAM" />
        <node displaytext="Відповіді за типом компонента" id="components-types" path="assessment/{:id}/results/components-types" condition="OPTION:DIAGRAM" />
        <node displaytext="Мережеві попередження" id="components-warnings" path="assessment/{:id}/results/components-warnings" condition="OPTION:DIAGRAM" />

        <node displaytext="Короткий опис оцінювання високого рівня &amp; Коментарі" id="overview" path="assessment/{:id}/results/overview" condition="SHOW-EXEC-SUMMARY" />
        <node displaytext="Звіти" id="reports" path="assessment/{:id}/results/reports" />

        <node displaytext="Оцінювання зверешено" id="tsa-assessment-complete" path="assessment/{:id}/results/tsa-assessment-complete" condition="INSTALL-MODE:TSA" />
    </node>
</nav>